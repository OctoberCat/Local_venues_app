<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center|left"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/venue_photo"
            android:elevation="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/venue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/photo"
            android:layout_toStartOf="@+id/rating"
            android:freezesText="false"
            android:paddingRight="5dp"
            android:text="@string/venue_name_sample"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/venue_name"
            android:layout_below="@+id/venue_name"
            android:text="@string/phone_sample"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:ellipsize="marquee"
            android:text="@string/rating_sample"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/phone"
            android:layout_below="@+id/phone"
            android:text="@string/address_sample" />


    </RelativeLayout>

</android.support.v7.widget.CardView>



